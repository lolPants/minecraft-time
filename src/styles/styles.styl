html
  font-family 'Minecraft'
  font-size 32px

  --background white
  --foreground black

  @media screen and (max-width 500px)
    font-size 24px

body
  height 60vh
  display flex
  flex-direction column
  justify-content center
  align-items center

  background-color var(--background)
  color var(--foreground)

p
  margin 0

a
  color initial

#time
  font-size 2rem
  cursor pointer

#source
  position fixed
  bottom 0
  margin-bottom 10px

  font-size 20px

#tooltip
  position fixed
  top 0
  left 0
  transform translate(6px, -105%)

  color white
  background-color rgba(16, 0, 16, 0.94)

  font-size 16px
  padding 0.375em
  line-height 1.25em

  white-space nowrap
  margin 0.125em 0.25em
  pointer-events none

  visibility visible
  z-index 9999

  &.hidden
    visibility hidden

  &::before
    content ''
    position absolute
    top 0.125em
    right -0.125em
    bottom 0.125em
    left -0.125em
    border 0.125em solid #100010
    border-style none solid
    border-color rgba(16,0,16,0.94)

  &::after
    content ''
    position absolute
    top 0.125em
    left 0
    bottom 0.125em
    right 0

    border 0.125em solid #2D0A63
    border-image linear-gradient(rgba(80, 0, 255, 0.31), rgba(40, 0, 127, 0.31)) 1
